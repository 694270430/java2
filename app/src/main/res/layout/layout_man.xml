<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <HorizontalScrollView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center"
        android:fadingEdge="vertical"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:scrollbars="none">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/recommod"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"

                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/teleplay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="电视剧"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/movie"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="电影"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:checked="true"
                android:id="@+id/anime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="动漫"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/veriety_show"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="综艺"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="体育"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/mv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="MV"
                android:textColor="@drawable/color"
                android:textSize="16sp" />
        </RadioGroup>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="501dp">

        <ImageButton
            android:id="@+id/one"
            android:layout_width="150dp"
            android:layout_height="188dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/manone" />

        <TextView
            android:id="@+id/one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/one"
            android:layout_centerVertical="true"
            android:text="海贼王-更新至666集"
            android:textColor="#727070" />

        <ImageButton
            android:id="@+id/two"
            android:layout_width="151dp"
            android:layout_height="184dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/one"
            android:layout_marginBottom="28dp"
            android:background="@drawable/mantwo" />

        <TextView
            android:id="@+id/two1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/three"
            android:layout_centerVertical="true"
            android:text="犬夜叉"
            android:textColor="#727070" />

        <ImageButton
            android:id="@+id/three"
            android:layout_width="150dp"
            android:layout_height="183dp"
            android:layout_alignStart="@+id/four"
            android:layout_alignTop="@+id/two"
            android:background="@drawable/manthree" />

        <TextView
            android:id="@+id/three1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/one"
            android:text="猫和老鼠"
            android:textColor="#727070" />

        <ImageButton
            android:id="@+id/four"
            android:layout_width="150dp"
            android:layout_height="189dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/manfour" />

        <TextView
            android:id="@+id/four1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/three"
            android:text="斗罗大陆Ⅱ"
            android:textColor="#727070" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_bottom_tags"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="horizontal">

        <RadioGroup
            android:weightSum="4"
            android:id="@+id/id_navcontent"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:drawableTop="@drawable/main"
                android:id="@+id/home"
                style="@style/radio_button"
                android:checked="true"
                android:singleLine="true"
                android:text="首页"
                android:textSize="13sp"
                android:textColor="@drawable/color"/>

            <RadioButton
                android:drawableTop="@drawable/music"
                android:id="@+id/aduio"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="音乐馆"
                android:textSize="13sp"
                android:textColor="@drawable/color"/>

            <RadioButton
                android:drawableTop="@drawable/qita"
                android:id="@+id/qita"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="社区"
                android:textSize="13sp"
                android:textColor="@drawable/color" />

            <RadioButton
                android:drawableTop="@drawable/my"
                android:id="@+id/personal"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="我的"
                android:textSize="13sp"
                android:textColor="@drawable/color" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>
