<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <HorizontalScrollView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center"
        android:fadingEdge="vertical"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:scrollbars="none">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/recommod"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"

                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/teleplay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="电视剧"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/movie"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="电影"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/anime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="动漫"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/veriety_show"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="综艺"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="体育"
                android:textColor="@drawable/color"
                android:textSize="16sp" />

            <RadioButton
                android:checked="true"
                android:id="@+id/mv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="MV"
                android:textColor="@drawable/color"
                android:textSize="16sp" />
        </RadioGroup>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="509dp">

        <ImageButton
            android:id="@+id/zero"
            android:layout_width="347dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/mv1" />

        <TextView
            android:id="@+id/zero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/zero"
            android:layout_marginTop="199dp"
            android:text="Taloy-Swift--ME"
            android:textColor="#727070" />

        <ImageButton
            android:id="@+id/one"
            android:layout_width="345dp"
            android:layout_height="183dp"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:background="@drawable/mv2" />

        <TextView
            android:id="@+id/one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/zero"
            android:layout_marginBottom="16dp"
            android:text="张艺兴再唱经典"
            android:textColor="#727070" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_bottom_tags"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="horizontal">

        <RadioGroup
            android:weightSum="4"
            android:id="@+id/id_navcontent"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:drawableTop="@drawable/main"
                android:id="@+id/home"
                style="@style/radio_button"
                android:checked="true"
                android:singleLine="true"
                android:text="首页"
                android:textSize="13sp"
                android:textColor="@drawable/color"/>

            <RadioButton
                android:drawableTop="@drawable/music"
                android:id="@+id/aduio"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="音乐馆"
                android:textSize="13sp"
                android:textColor="@drawable/color"/>

            <RadioButton
                android:drawableTop="@drawable/qita"
                android:id="@+id/qita"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="社区"
                android:textSize="13sp"
                android:textColor="@drawable/color" />

            <RadioButton
                android:drawableTop="@drawable/my"
                android:id="@+id/personal"
                style="@style/radio_button"
                android:singleLine="true"
                android:text="我的"
                android:textSize="13sp"
                android:textColor="@drawable/color" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>